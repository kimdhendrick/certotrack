<% presenter_for(@service_type) do |service_type| %>
  <h1>Show Service Type</h1>

  <%= link_to 'Home', root_path %> |
  <%= link_to "Create Service Type", new_service_type_path %>

  <p>
    <b>Name</b>
    <%= service_type.name %>
  </p>

  <p>
    <b>Expiration Type</b>
    <%= service_type.expiration_type %>
  </p>

  <% if service_type.date_expiration_type? %>
    <p>
      <b>Interval Date</b>
      <%= service_type.interval_date %>
    </p>
  <% end %>

  <% if service_type.mileage_expiration_type? %>
    <p>
      <b>Interval Mileage</b>
      <%= service_type.interval_mileage %>
    </p>
  <% end %>

  <%= service_type.edit_link %> |
  <%= service_type.delete_link %>

  <h2>Non-Serviced Vehicles</h2>
  <table border="1">
    <thead>
    <tr>
      <th>Vehicle Number</th>
      <th>VIN</th>
      <th>License Plate</th>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Mileage</th>
      <th>Location</th>
      <th>&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    <% @non_serviced_vehicles.each do |vehicle| %>
      <tr>
        <td><%= link_to vehicle.vehicle_number, vehicle.model %></td>
        <td><%= link_to vehicle.vin, vehicle.model %></td>
        <td><%= vehicle.license_plate %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.vehicle_model %></td>
        <td><%= vehicle.mileage %></td>
        <td><%= vehicle.location %></td>
        <td>
          <%= link_to 'Service',
                      new_service_path(
                        service_type_id: service_type.id,
                        vehicle_id: vehicle.id,
                        source: :service_type
                      )
          %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>


<% end %>

