<h2>Create Training Event - Select Employees</h2>

<%= form_tag certification_type_list_training_event_path, method: 'get' do %>
  <table>
    <thead>
    <tr>
      <td>Select</td>
      <th><%= sortable 'employee_number' %></th>
      <th><%= sortable 'first_name' %></th>
      <th><%= sortable 'last_name' %></th>
      <th><%= sortable 'location_name' %></th>
    </tr>
    </thead>
    <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= check_box_tag "employee_ids[]", employee.id %></td>
        <td><%= employee.employee_number %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.location_name %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="row actions">
    <div class="small-4 columns">
       <%= submit_tag "Next", class: "button tiny radius" %>
    </div>
  </div>
<% end %>