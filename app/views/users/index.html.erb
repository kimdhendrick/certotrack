<h1><%= @report_title %></h1>

<ul class="inline-list">
  <li>
    <a href="#" data-dropdown="drop1" class="button tiny secondary radius dropdown">Export</a>
    <ul id="drop1" data-dropdown-content class="f-dropdown">
      <li><%= link_to 'Export to CSV', customer_users_path(format: 'csv') %></li>
      <li><%= link_to 'Export to Excel', customer_users_path(format: 'xls') %></li>
      <li><%= link_to 'Export to PDF', customer_users_path(format: 'pdf', params: params) %></li>
    </ul>
  </li>
  <li>Total: <%= @user_count %></li>
</ul>

<%= render 'users_list' %>

<%= will_paginate @users, renderer: FoundationPagination::Rails %>