<div class="fixed">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1>&nbsp;</h1>
      </li>
    </ul>
    <section class="top-bar-section">
      <ul class="left">
        <li class="has-form">
          <% if user_signed_in? %>
            <a href="/dashboard" class="button tiny radius">CertoTrack&nbsp;Home</a>
          <% else %>
            <a href="/" class="button tiny radius">CertoTrack&nbsp;Home</a>
          <% end %>
        </li>
        <% unless user_signed_in? %>
            <li class="divider"></li>
            <li>
              <%= link_to 'About Us', about_us_path %>
            </li>
            <li class="divider"></li>
            <li>
              <a href="mailto:sales@certotrack.com">Contact</a>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to 'Sign Up', new_registration_path %>
            </li>
            <li class="divider"></li>
        <% end %>
      </ul>
    </section>
    <section class="top-bar-section">
      <% if user_signed_in? %>
          <ul class="right">
            <li class="has-dropdown">
              <a href="#">Welcome <%= @first_name %>! (<%= @customer_name %>)</a>
              <ul class="dropdown">
                <li>
                  <%= link_to 'Refresh Counts', refresh_path %>
                </li>
                <li>
                  <%= link_to 'Change Password', edit_change_password_path %>
                </li>
                <li>
                  <%= link_to "Log out", logout_path %>
                </li>
              </ul>
            </li>
          </ul>
      <% end %>
    </section>
  </nav>
</div>