<% certification_presenter_for do |certification| %>
  <h1>Show Certification</h1>

  <%= link_to 'Home', root_path %> |
  <%= link_to 'Create Certification', new_certification_path %> |
  <%= link_to 'Create Employee', new_employee_path %>

  <p>
    <b>Certification Type</b>
    <%= certification.certification_type_show_link %>
  </p>

  <p>
    <b>Certification Interval</b>
    <%= certification.interval %>
  </p>

  <p>
    <b>Employee</b>
    <%= certification.employee_show_link %>
  </p>

  <p>
    <b>Trainer</b>
    <%= certification.trainer %>
  </p>

  <p>
    <b>Status</b>
    <%= certification.status %>
  </p>

  <p>
    <b>Last Certification Date</b>
    <%= certification.last_certification_date %>
  </p>

  <p>
    <b>Expiration Date</b>
    <%= certification.expiration_date %>
  </p>

  <p>
    <b><%= certification.units_achieved_label %></b>
    <%= certification.units_achieved %>
  </p>

  <p>
    <b>Comments</b>
    <%= certification.comments %>
  </p>

  <%= link_to 'Edit', edit_certification_path(@certification) %> |
  <%= link_to 'Delete', @certification, method: :delete, data: {confirm: 'Are you sure you want to delete?'} %>
<% end %>