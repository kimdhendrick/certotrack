<% presenter_for(@vehicle) do |vehicle| %>
  <h1>Show Vehicle</h1>

  <%= link_to 'Home', root_path %> |
  <%= link_to 'Search Vehicles', search_vehicles_path %> |
  <%= link_to 'Create Vehicle', new_vehicle_path %>

  <p>
    <b>Vehicle Number</b>
    <%= vehicle.vehicle_number %>
  </p>

  <p>
    <b>VIN</b>
    <%= vehicle.vin %>
  </p>

  <p>
    <b>License Plate</b>
    <%= vehicle.license_plate %>
  </p>

  <p>
    <b>Year</b>
    <%= vehicle.year %>
  </p>

  <p>
    <b>Make</b>
    <%= vehicle.make %>
  </p>

  <p>
    <b>Model</b>
    <%= vehicle.vehicle_model %>
  </p>

  <p>
    <b>Mileage</b>
    <%= vehicle.mileage %>
  </p>

  <p>
    <b>Location</b>
    <%= vehicle.location %>
  </p>

  <p>
    <b>Status</b>
    <%= vehicle.status %>
  </p>

  <%= vehicle.edit_link %> |
  <%= vehicle.delete_link %>

  <br/>
  <br/>
  <%= vehicle.new_service_link %>
<% end %>