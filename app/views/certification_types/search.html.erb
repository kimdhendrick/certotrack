<h1>Search Certification Types</h1>

<ul class="inline-list">
  <li><%= link_to "Create Certification Type", new_certification_type_path %></li>
</ul>

<%= form_tag search_certification_types_path, :method => 'get' do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  <fieldset>
    <div class="row field">
      <div class="small-6 columns">
        <label for="name">Name contains:</label>
        <%= text_field_tag :name, params[:name] %>
      </div>
    </div>

    <div class="row actions">
      <div class="small-6 columns">
        <span class="right">
          <%= submit_tag "Search", class: "button tiny radius right" %>
        </span>
      </div>
    </div>
  </fieldset>
<% end %>

<ul class="inline-list">
  <li class="right">Total: <%= @certification_types_count %></li>
</ul>

<%= render 'certification_type_list' %>

<%= will_paginate @certification_types, renderer: FoundationPagination::Rails %>
