<%= form_for(@certification_type) do |f| %>

  <%= render 'errors'%>

  <div class="field">
    <%= f.label :name %>
    <br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :units_required, 'Required Units' %>
    <br/>
    <%= f.text_field :units_required %>
  </div>

  <div class="field">
    <%= f.label :interval, 'Interval' %>
    <br/>
    <%= select(:certification_type, :interval,
               options_from_collection_for_select(@intervals, 'text', 'text',
                                                  @certification_type.interval)) %>
  </div>

  <div class="actions">
    <%= submit_tag(user_action) %>
  </div>

<% end %>