<%= form_for(@equipment) do |f| %>
  <% if @equipment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@equipment.errors.count, "error") %> prohibited this equipment from being saved:</h2>

      <ul>
        <% @equipment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :serial_number, 'Serial Number' %>
    <br/>
    <%= f.text_field :serial_number %>
  </div>

  <div class="field">
    <%= f.label :location_id %>
    <br/>
    <%= select(:equipment, :location_id,
               options_from_collection_for_select(@locations, 'id', 'name',
               @equipment.location_id)) %>
  </div>


  <div class="field">
    <%= f.label :inspection_interval, 'Inspection Interval' %>
    <br/>
    <%= select(:equipment, :inspection_interval,
               options_from_collection_for_select(InspectionInterval.all.to_a, 'text', 'text',
                                                  @equipment.inspection_interval)) %>
  </div>

  <div class="field">
    <%= f.label :last_inspection_date, 'Last Inspection Date' %>
    <br/>
    <%= f.text_field :last_inspection_date %>
  </div>

  <div class="field">
    <%= f.label :notes, 'Comments' %>
    <br/>
    <%= f.text_field :notes %>
  </div>

  <div class="actions">
    <%= submit_tag(user_action) %>
  </div>

<% end %>

